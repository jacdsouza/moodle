{{!
    @template mod_lti/categorynode

    Provides a template for the course categories tree view.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    *

    Example context (json):
    {
        "id": "5",
        "parent": "0",
        "name": "Example 1",
        "nodes": [{
                "id": "6",
                "parent": "5",
                "name": "Sub category 1",
                "nodes": [{
                    "id": "7",
                    "parent": "6",
                    "name": "Sub Sub category 1",
                    "nodes": [],
                    "haschildren": "0"
                }],
                "haschildren": "1"
            },
            {
                "id": "8",
                "parent": "5",
                "name": "Sub category 2",
                "nodes": [{
                    "id": "9",
                    "parent": "8",
                    "name": "Sub Sub category 2",
                    "nodes": [],
                    "haschildren": "0"
                }],
                "haschildren": "1"
            },
            {
                "id": "593",
                "parent": "5",
                "name": "Sub category 3",
                "nodes": [],
                "haschildren": "1"
            }
        ],
        "haschildren": "1"
    }
}}


{{^id}}
    <div id="modltitree">
{{/id}}
        <ul {{#id}}role="group"{{/id}}{{^id}}role="tree" class="treeview"{{/id}} aria-expanded="false">
            {{#nodes}}
                <li {{#haschildren}}class="parent myclose"{{/haschildren}} role="treeitem">
                    <input type="checkbox" class="coursecategories" id="cat-{{{id}}}" name="coursecategories" value="{{{id}}}"><label for="cat-{{{id}}}"><span>{{{name}}}</span></label>
                    {{>mod_lti/categorynode}}
            {{/nodes}}
        </ul>
{{^id}}
    </div>
{{/id}}